{
    "compilerOptions": {
    "target": "ES2022",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "lib": ["ES2022", "DOM"],
      "esModuleInterop": true,
      "allowSyntheticDefaultImports": true,
      "forceConsistentCasingInFileNames": true,
      "noUnusedLocals": true,
      "strict": true,
      "resolveJsonModule": true,
      "noImplicitAny": true,
      "skipLibCheck": true,
  
      "baseUrl": "./src",
      "paths": {
        "@/*": ["*"]
      },
  
      "outDir": "./dist",
      "rootDir": "./src"
    },
    "include": ["src"],
    "exclude": ["node_modules", "dist"]
  }
  